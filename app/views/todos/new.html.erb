<h3>予定の新規追加</h3>
 <%= render "layouts/shared/error", obj: @todo %>
<%= form_with model: @todo do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :start_date ,"開始日" %></th>
      <td><%= f.date_field :start_date %></td>
    </tr>

    <tr>
      <th><%= f.label :end_date ,"終了日" %></th>
      <td><%= f.date_field :end_date %></td>
    </tr>
    
    <tr>
        <th><%= f.label :allday ,"終日"%></th>
        <th><%= f.check_box :allday , {} , checked_value = "true", unchecked_value= "false" %></th>
    </tr>
<!--終日のチェックボックス-->
    <tr>
      <th><%= f.label :memo ,"スケジュールメモ" %></th>
      <td><%= f.text_area :memo %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "保存"%></li>
      <li><%= link_to "予定一覧に戻る", :todos %></li>
    </ul>
  </div>
<% end %> 